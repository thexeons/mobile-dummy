<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40px"
        tools:context=".MainActivity"
        android:background="@drawable/bgdarkblue">

        <LinearLayout
            android:id="@+id/stepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60px"
                android:src="@drawable/stepper1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60px"
                android:src="@drawable/stepper3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60px"
                android:src="@drawable/stepper1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60px"
                android:src="@drawable/stepper1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About you"
            android:textSize="8pt"
            android:textColor="#ffffff"
            android:layout_below="@+id/stepper"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/register2form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80px"
            android:background="@drawable/cardviewbg"
            android:layout_below="@+id/stepper"
            android:padding="40px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textSize="10pt"
                />
            <EditText
                android:id="@+id/nameFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/nameLast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameFirst"
                android:backgroundTint="@android:color/holo_blue_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_below="@+id/nameLast"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:clickable="true"
                android:editable="false"
                android:layout_below="@+id/address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identity Number"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/ktp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:inputType="number"
                android:layout_below="@+id/dob"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/ktp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account number"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/accountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_below="@+id/email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nationality"
                android:textSize="10pt"/>
            <EditText
                android:id="@+id/nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:layout_below="@+id/accountNumber"/>
            <EditText
                android:id="@+id/ipInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:hint="Server IP Address"
                android:textSize="2pt"
                android:layout_below="@+id/nationality"/>
        </LinearLayout>
        <TextView
            android:id="@+id/signin"
            android:layout_below="@+id/register2form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20px"
            android:textColor="#ffffff"
            android:clickable="true"
            android:text="Already have an account? click here to SIGN IN"/>
        <Button
            android:id="@+id/register2Btn"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_marginTop="40px"
            android:background="@drawable/borderbg"
            android:layout_below="@+id/signin"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>