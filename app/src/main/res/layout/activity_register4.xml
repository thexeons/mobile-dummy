<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40px"
    tools:context=".MainActivity"
    android:background="@drawable/bgdarkblue">

    <LinearLayout
        android:id="@+id/stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:src="@drawable/stepper1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:src="@drawable/stepper1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:src="@drawable/stepper1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60px"
            android:src="@drawable/stepper3"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select branch"
        android:textSize="8pt"
        android:textColor="#ffffff"
        android:layout_below="@+id/stepper"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/register4Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:background="@drawable/cardviewbg"
        android:layout_below="@+id/stepper">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6">
                    <RadioGroup
                        android:id="@+id/radioUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radioBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="1"
                            android:textSize="1pt"
                            android:textColor="#ffffff"
                            android:layout_marginVertical="20px"
                            />
                        <RadioButton
                            android:id="@+id/radioInsurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="1pt"
                            android:textColor="#ffffff"
                            android:layout_marginVertical="25px"/>
                        <RadioButton
                            android:id="@+id/radioFinance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="1pt"
                            android:textColor="#ffffff"
                            android:layout_marginVertical="30px"
                            />
                        <RadioButton
                            android:id="@+id/radioSyariah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="1pt"
                            android:textColor="#ffffff"
                            android:layout_marginVertical="30px"/>
                        <RadioButton
                            android:id="@+id/radioSekuritas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="1pt"
                            android:textColor="#ffffff"
                            android:layout_marginVertical="30px"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="150px"
                        android:src="@drawable/bcabank"/>
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="150px"
                        android:src="@drawable/bcainsurance"/>
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="150px"
                        android:src="@drawable/bcafinance"/>
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="150px"
                        android:src="@drawable/bcasyariah"/>
                    <ImageView
                        android:layout_width="600px"
                        android:layout_height="150px"
                        android:src="@drawable/bcasekuritas"/>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/signin"
        android:layout_below="@+id/register4Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20px"
        android:textColor="#ffffff"
        android:clickable="true"
        android:text="Already have an account? click here to SIGN IN"/>
    <Button
        android:id="@+id/btn_kirim"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="40px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderbg"
        android:layout_below="@+id/signin"/>
</RelativeLayout>
